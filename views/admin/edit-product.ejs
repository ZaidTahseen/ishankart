<%- include('../includes/head.ejs') %>

<link rel="stylesheet" href="/css/add-product.css">
</head>

<body>

    <!-- navigation section here  -->

    <%- include('../includes/navigation.ejs') %>

    <!-- navigation end here  -->

    <form action="/admin/edit-product" method="post">

        <div>
            <label for="title">Title</label>
            <input type="text" name="title" required value="<%= prod.title %>">
        </div>

        <div>
            <label for="imgUrl">Image Url</label>
            <input type="text" name="imgUrl" required value="<%= prod.imgUrl %>">
        </div>

        <div>
            <label for="price">Price</label>
            <input type="number" name="price" required value="<%= prod.price %>">
        </div>

        <div>
            <input type="hidden" name="id" value="<%= prod._id %>">
            <input type="submit" class="submit">
        </div>

    </form>

    <%- include('../includes/end.ejs') %>